//Kendisine parametre olarak gelen stringteki kelime sayısını geri döndüren metod
package newpackage;
public class algoornek26 {
    public static int KelimeSayisi(String str){
        int sayac=0;
        int kelimesayisi=0;
        for (int i = 0; i <str.length(); i++) {
            if(str.charAt(i)==' '){
             sayac++;   
            }
        }kelimesayisi=sayac+1;
        return kelimesayisi;
}
    public static void main(String[] args) {
       
        int x=KelimeSayisi("ali ata bindi");
        System.out.println(x);
  
}
}
